<h6>dashboard</h6>
<h3>Welcome, {{name}}</h3>
<p>Here are your stories</p>
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stores/{{stories._id}}"></a>{{stories.title}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{stories.status}}</span></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{stories}}